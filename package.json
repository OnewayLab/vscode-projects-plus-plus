{
  "name": "vscode-projects-plus-plus",
  "displayName": "Projects++",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:projects"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "projects",
          "name": "Projects"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "projects",
        "contents": "Projects++ is a simple extension that allows you to manage your projects in a specific folder.\n[Set Root Path](command:projects-plus-plus.setRootPath)"
      }
    ],
    "configuration": {
      "title": "Projects++",
      "properties": {
        "projects-plus-plus.rootPath": {
          "type": "string",
          "description": "Root Path of the Workspace"
        },
        "projects-plus-plus.projects": {
          "type": "array",
          "description": "Projects",
          "items": {
            "type": "string",
            "description": "Project Path"
          }
        }
      }
    },
    "commands": [
      {
        "command": "projects-plus-plus.setRootPath",
        "title": "Set Root Path"
      },
      {
        "command": "projects-plus-plus.refreshEntry",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "projects-plus-plus.openInWorkspace",
        "title": "Open in workspace",
        "icon": "$(link-external)"
      },
      {
        "command": "projects-plus-plus.removeFromWorkspace",
        "title": "Remove from workspace",
        "icon": "$(x)"
      },
      {
        "command": "projects-plus-plus.newFolder",
        "title": "New folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "projects-plus-plus.delete",
        "title": "Delete"
      },
      {
        "command": "projects-plus-plus.markAsProject",
        "title": "Mark as project",
        "icon": "$(bookmark)"
      },
      {
        "command": "projects-plus-plus.markAsFolder",
        "title": "Mark as folder"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "projects-plus-plus.refreshEntry",
          "when": "view == projects",
          "group": "navigation"
        },
        {
          "command": "projects-plus-plus.removeFromWorkspace",
          "when": "view == workbench.explorer.fileView && explorerResourceIsRoot",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "projects-plus-plus.openInWorkspace",
          "when": "view == projects",
          "group": "inline"
        },
        {
          "command": "projects-plus-plus.newFolder",
          "when": "view == projects && viewItem == folder",
          "group": "inline"
        },
        {
          "command": "projects-plus-plus.markAsProject",
          "when": "view == projects && viewItem == folder",
          "group": "inline"
        },
        {
          "command": "projects-plus-plus.delete",
          "when": "view == projects"
        },
        {
          "command": "projects-plus-plus.markAsFolder",
          "when": "view == projects && viewItem == project"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.73.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
